<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:baselineAligned="false" android:padding="10dp">

    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView" android:layout_alignParentLeft="true" android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true" android:layout_marginTop="2dp" android:text="0"
                android:layout_marginBottom="10dp" android:layout_weight="0.5" android:gravity="center_vertical|right"
                android:textSize="40sp"/>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_alignParentLeft="false"
                android:gravity="fill_horizontal" android:layout_marginLeft="0dp"
                android:id="@+id/tableRow" android:layout_below="@+id/textView" android:layout_weight="1"
                android:layout_margin="0dp">
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="1"
                    android:id="@+id/button" android:layout_column="0" android:layout_weight="1"/>
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="2"
                    android:id="@+id/button1" android:layout_column="1" android:layout_weight="1"/>
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="3"
                    android:id="@+id/button2" android:layout_column="2" android:layout_weight="1"/>
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="/"
                    android:id="@+id/button9" android:layout_weight="1"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="sqrt"
                    android:id="@+id/button19" android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp" android:layout_alignParentTop="true" android:layout_marginTop="84dp"
                android:layout_weight="1" android:layout_margin="0dp">
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="4"
                    android:id="@+id/button3" android:layout_column="0" android:layout_weight="1"/>
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="5"
                    android:id="@+id/button4" android:layout_column="1" android:layout_weight="1"/>
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="6"
                    android:id="@+id/button5" android:layout_column="2" android:layout_weight="1"/>
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="-"
                    android:id="@+id/button10" android:layout_weight="1"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="X^n"
                    android:id="@+id/button18" android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="fill_horizontal|start|fill|end" android:layout_marginLeft="0dp"
                android:layout_marginTop="144dp" android:id="@+id/tableRow1" android:layout_alignBottom="@+id/tableRow"
                android:layout_weight="1" android:layout_margin="0dp">
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="7"
                    android:id="@+id/button6" android:layout_column="0" android:layout_weight="1"/>
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="8"
                    android:id="@+id/button7" android:layout_column="1" android:layout_weight="1"/>
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="9"
                    android:id="@+id/button8" android:layout_column="2" android:layout_weight="1"/>
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="*"
                    android:id="@+id/button11" android:layout_weight="1"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="log"
                    android:id="@+id/button17" android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent"
                  android:layout_alignParentLeft="false" android:gravity="fill_horizontal"
                  android:layout_marginLeft="0dp" android:id="@+id/tableRow2" android:layout_below="@+id/textView"
                  android:layout_weight="1" android:layout_margin="0dp">
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent"
                    android:id="@+id/button12" android:layout_column="0" android:layout_weight="1" android:text="."/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="0"
                    android:id="@+id/button13" android:layout_column="1" android:layout_weight="1"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="="
                    android:id="@+id/button14" android:layout_column="2" android:layout_weight="1"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="+"
                    android:id="@+id/button15" android:layout_weight="1"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="DEL"
                    android:id="@+id/button16" android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>

