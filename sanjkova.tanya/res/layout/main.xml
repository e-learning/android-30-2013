<?xml version="1.0" encoding="utf-8"?>

<GridLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:columnOrderPreserved="true">
    <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="sin"
            android:id="@+id/button9" android:layout_row="1" android:layout_column="0" android:textSize="24dp"
            android:textColor="#118888"/>
    <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/button8" android:layout_row="1" android:layout_column="1" android:textColor="#118888"
            android:textSize="24dp" android:width="1dp"/>
    <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/button7" android:layout_row="1" android:layout_column="2" android:textColor="#118888"
            android:textSize="24dp" android:width="1dp"/>
    <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/button6" android:layout_row="1" android:layout_column="3" android:textSize="24dp"
            android:textColor="#118888" android:width="1dp"/>
    <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="!"
            android:id="@+id/button22" android:layout_row="1" android:layout_column="4" android:textColor="#118888"
            android:textSize="24dp" android:width="1dp"/>
    <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="*"
            android:id="@+id/button15" android:layout_row="1" android:layout_column="5" android:textSize="24dp"
            android:textColor="#118888" android:width="1dp"/>
    <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="cos"
            android:id="@+id/button10" android:layout_row="2" android:layout_column="0" android:textSize="24dp"
            android:textColor="#118888" android:width="1dp"/>
    <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/button3" android:layout_row="2" android:layout_column="1" android:textSize="24dp"
            android:textColor="#118888" android:width="1dp"/>
    <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/button4" android:layout_row="2" android:layout_column="2" android:textColor="#118888"
            android:textSize="24dp" android:width="1dp"/>
    <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/button5" android:layout_row="2" android:layout_column="3" android:textColor="#118888"
            android:textSize="24dp" android:width="1dp"/>
    <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/button18" android:layout_row="2" android:layout_column="4" android:textColor="#118888"
            android:textSize="24dp" android:width="1dp"/>
    <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="%"
            android:id="@+id/button21" android:layout_row="2" android:layout_column="5" android:textSize="24dp"
            android:textColor="#118888" android:width="1dp"/>
    <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="("
            android:id="@+id/button11" android:layout_row="3" android:layout_column="0" android:textColor="#118888"
            android:textSize="24dp" android:width="1dp"/>
    <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/button1" android:layout_row="3" android:layout_column="1" android:textColor="#118888"
            android:textSize="24dp" android:width="1dp"/>
    <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/button" android:layout_row="3" android:layout_column="2" android:textSize="24dp"
            android:textColor="#118888" android:width="1dp"/>
    <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2" android:layout_row="3" android:layout_column="3" android:text="3"
            android:textColor="#118888" android:textSize="24dp" android:width="1dp"/>
    <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="/"
            android:id="@+id/button16" android:layout_row="3" android:layout_column="4" android:textColor="#118888"
            android:textSize="24dp" android:width="1dp"/>
    <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="="
            android:id="@+id/p" android:layout_row="3" android:layout_column="5" android:textColor="#118888"
            android:textSize="24dp" android:width="1dp"/>
    <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text=")"
            android:id="@+id/button13" android:layout_row="4" android:layout_column="0" android:textSize="24dp"
            android:textColor="#118888"/>
    <Button
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/button12" android:layout_row="4" android:layout_column="1"
            android:textColor="#118888" android:textSize="24dp" android:width="20dp" android:layout_columnSpan="2"
            android:layout_gravity="right"/>
    <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="."
            android:id="@+id/button14" android:layout_row="4" android:layout_column="3" android:textColor="#118888"
            android:textSize="24dp" android:width="1dp"/>
    <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/button17" android:layout_row="4" android:layout_column="4" android:textSize="24dp"
            android:textColor="#118888" android:width="1dp"/>
    <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="^"
            android:id="@+id/button20" android:layout_row="4" android:layout_column="5" android:textColor="#118888"
            android:textSize="24dp" android:width="1dp"/>
    <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView" android:layout_row="0" android:layout_column="0"
            android:textSize="30dp" android:textColor="#FFFF00"
            android:textIsSelectable="true" android:layout_columnSpan="5"/>
</GridLayout>