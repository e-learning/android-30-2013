<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/textView" android:layout_gravity="center" android:textSize="20dp"
            android:layout_weight="1"/>
    <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageButton" android:visibility="gone"/>
    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_marginTop="-2dp" android:layout_gravity="center"
            android:layout_weight="1">
        <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/tableRow"
                  android:layout_weight="1">
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="7"
                    android:id="@+id/num7" android:layout_weight="1" android:textColor="#000000"
                    android:textStyle="bold|normal|italic" android:textSize="10dp"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="8"
                    android:id="@+id/num8" android:layout_weight="1" android:textColor="#000000"
                    android:textStyle="bold|normal|italic" android:textSize="10dp"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="9"
                    android:id="@+id/num9" android:layout_weight="1"
                    android:textColor="#000000" android:textStyle="bold|normal|italic" android:textSize="10dp"
                    />
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="+"
                    android:id="@+id/buttonplus" android:layout_column="3" android:layout_weight="1"
                    android:textColor="#000000" android:textStyle="normal|italic" android:textSize="10dp"
                    />
            <Button android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="sin"
                    android:id="@+id/buttonsin" android:layout_weight="1" android:textColor="#000000"
                    android:textStyle="bold|normal|italic" android:textSize="10dp"/>
        </TableRow>
        <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/tableRow1"
                  android:layout_weight="1">
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="4"
                    android:id="@+id/num4" android:layout_weight="1" android:textColor="#000000"
                    android:textStyle="bold|normal|italic" android:textSize="10dp"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="5"
                    android:id="@+id/num5" android:layout_weight="1" android:textColor="#000000"
                    android:textStyle="bold|normal|italic" android:textSize="10dp"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="6"
                    android:id="@+id/num6" android:layout_weight="1" android:textColor="#000000"
                    android:textStyle="bold|normal|italic" android:textSize="10dp"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="-"
                    android:id="@+id/buttonminus" android:layout_column="3" android:layout_weight="1"
                    android:textColor="#000000" android:textStyle="normal|italic" android:textSize="10dp"
                    />
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="cos"
                    android:id="@+id/buttoncos" android:layout_weight="1" android:textColor="#000000"
                    android:textStyle="bold|normal|italic" android:textSize="10dp"/>
        </TableRow>
        <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/tableRow2"
                  android:layout_weight="1">
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="1"
                    android:id="@+id/num1" android:layout_weight="1" android:textColor="#000000"
                    android:textStyle="bold|normal|italic" android:textSize="10dp"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="2"
                    android:id="@+id/num2" android:layout_weight="1" android:textColor="#000000"
                    android:textStyle="bold|normal|italic" android:textSize="10dp"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="3"
                    android:id="@+id/num3" android:layout_weight="1" android:textColor="#000000"
                    android:textStyle="bold|normal|italic" android:textSize="10dp"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="*"
                    android:id="@+id/buttonmultyply" android:layout_column="3" android:layout_weight="1"
                    android:textColor="#000000" android:textStyle="normal|italic" android:textSize="10dp"
                    />
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="tg"
                    android:id="@+id/buttontg" android:layout_weight="1" android:textColor="#000000"
                    android:textStyle="bold|normal|italic" android:textSize="10dp"/>
        </TableRow>
        <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/tableRow3"
                  android:layout_weight="1">
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="0"
                    android:id="@+id/num0" android:layout_weight="1" android:textColor="#000000"
                    android:textSize="10dp" android:textStyle="bold|italic"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="."
                    android:id="@+id/buttondot" android:layout_weight="1" android:textColor="#000000"
                    android:textSize="10dp"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="="
                    android:id="@+id/buttonequal" android:layout_column="1" android:layout_weight="1"
                    android:textColor="#000000" android:textSize="10dp"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="c"
                    android:id="@+id/buttonclear" android:layout_column="2" android:layout_weight="1"
                    android:textColor="#000000" android:textSize="10dp"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="ctg"
                    android:id="@+id/buttonctg" android:layout_weight="1" android:textColor="#000000"
                    android:textStyle="bold|normal|italic" android:textSize="10dp"/>
        </TableRow>
        <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/tableRow5"
                  android:layout_weight="1">
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="^"
                    android:id="@+id/buttonpow" android:layout_weight="1" android:textColor="#000000"
                    android:textSize="10dp"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="("
                    android:id="@+id/buttonbracket1" android:layout_weight="1" android:textStyle="normal|italic"
                    android:textColor="#000000" android:textSize="10dp"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text=")"
                    android:id="@+id/buttonbracket2" android:layout_weight="1" android:textStyle="normal|italic"
                    android:textColor="#000000" android:textSize="10dp"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="/"
                    android:id="@+id/buttondivide" android:layout_weight="1" android:textColor="#000000"
                    android:textStyle="normal|italic" android:textSize="10dp"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="mod"
                    android:id="@+id/buttonmod" android:layout_weight="1" android:textColor="#000000"
                    android:textStyle="bold|normal|italic" android:textSize="10dp"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_weight="1" android:background="#040404">
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="X"
                    android:id="@+id/buttonX" android:layout_weight="1" android:textSize="10dp"
                    android:textColor="#000000"/>
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Ð“(x)"
                    android:id="@+id/buttongraph" android:textSize="10dp" android:layout_weight="1"
                    android:textColor="#000000"/>
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="H"
                    android:id="@+id/buttonhistory" android:textColor="#000000" android:textSize="10dp"
                    android:layout_weight="1"/>
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="abs"
                    android:id="@+id/buttonabs" android:layout_weight="1" android:textSize="15dp"
                    android:textStyle="bold|italic"/>
        </TableRow>
    </TableLayout>
</LinearLayout>



