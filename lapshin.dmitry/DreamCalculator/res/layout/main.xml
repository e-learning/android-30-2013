<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/editText" android:layout_gravity="center_horizontal|top" android:textSize="24dp"
            android:inputType="none" android:layout_weight="4"/>
    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_gravity="center_vertical|right"
            android:layout_weight="1">
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_weight="2">
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="1"
                    android:id="@+id/button1" android:layout_weight="1"/>
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="2"
                    android:id="@+id/button2" android:layout_weight="1"/>
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="3"
                    android:id="@+id/button3" android:layout_weight="1"/>
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="+"
                    android:id="@+id/buttonAdd" android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/tableRow1"
                  android:layout_weight="2">
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="4"
                    android:id="@+id/button4" android:layout_weight="1" android:layout_column="0"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="5"
                    android:id="@+id/button5" android:layout_weight="1" android:layout_column="1"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="6"
                    android:id="@+id/button6" android:layout_weight="1" android:layout_column="2"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="-"
                    android:id="@+id/buttonSubtract" android:layout_weight="1" android:layout_column="3"/>
        </TableRow>
        <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/tableRow"
                  android:layout_weight="2">
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="7"
                    android:id="@+id/button7" android:layout_weight="1" android:layout_column="0"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="8"
                    android:id="@+id/button4" android:layout_weight="1" android:layout_column="1"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="9"
                    android:id="@+id/button5" android:layout_weight="1" android:layout_column="2"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="*"
                    android:id="@+id/buttonMultiply" android:layout_weight="1" android:layout_column="3"/>
        </TableRow>
        <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/tableRow2"
                  android:layout_weight="2">
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="."
                    android:id="@+id/buttonDot" android:layout_weight="1" android:layout_column="0"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="="
                    android:id="@+id/buttonCalculate" android:layout_weight="1" android:textStyle="bold"
                    android:layout_column="1"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="C"
                    android:id="@+id/buttonBackspace" android:layout_weight="1" android:layout_column="2"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="/"
                    android:id="@+id/buttonDivide" android:layout_weight="1" android:layout_column="3"/>
        </TableRow>
        <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="2"
                  android:id="@+id/tableRow3">
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="("
                    android:id="@+id/buttonBraceLeft" android:layout_weight="1" android:layout_column="0"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text=")"
                    android:id="@+id/buttonBraceRight" android:layout_weight="1" android:layout_column="1"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="^"
                    android:id="@+id/buttonPower" android:layout_column="2" android:layout_weight="1"/>
            <Button android:layout_width="fill_parent" android:layout_height="fill_parent"
                    android:id="@+id/buttonAns" android:layout_column="3" android:layout_weight="1" android:text="."/>
        </TableRow>
    </TableLayout>
    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_weight="5">
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_weight="1">
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Functions"
                    android:id="@+id/buttonMenuLeft" android:layout_column="0" android:layout_weight="1"/>
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/buttonMenuRight" android:layout_column="1" android:layout_weight="1" android:text="Functions"/>
        </TableRow>
    </TableLayout>
</LinearLayout>